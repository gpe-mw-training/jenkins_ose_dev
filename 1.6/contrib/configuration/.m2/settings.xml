<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0" 
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
          xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0 http://maven.apache.org/xsd/settings-1.0.0.xsd">

  <!-- 
    Default local maven repository is ~/.m2/repository
    Its recommended that student's use a fresh local maven repository.
    If you want to start and use a different local maven repository than your default, then uncomment and modifiy this next line -->
  <!--localRepository>/u02/maven/defaultrepo</localRepository -->

  <profiles>
    <profile>
            <id>tech-preview-all</id>
            <activation>
                <property>
                    <name>com.redhat.xpaas.repo.jbossorg</name>
                    <value/>
                </property>
            </activation>
            <repositories>
                <repository>
                    <id>tech-preview-all</id>
                    <name>Red Hat Tech Preview repository (all)</name>
                    <url>http://maven.repository.redhat.com/techpreview/all/</url>
                    <layout>default</layout>
                    <releases>
                        <enabled>true</enabled>
                        <updatePolicy>never</updatePolicy>
                    </releases>
                    <snapshots>
                        <enabled>false</enabled>
                        <updatePolicy>never</updatePolicy>
                    </snapshots>
                </repository>
            </repositories>
            <pluginRepositories>
                <pluginRepository>
                    <id>tech-preview-all</id>
                    <activation>
                    <property>
                        <name>com.redhat.xpaas.repo.jbossorg</name>
                        <value/>
                    </property>
                    </activation>
                    <name>Red Hat Tech Preview repository (all)</name>
                    <url>http://maven.repository.redhat.com/techpreview/all/</url>
                    <layout>default</layout>
                    <releases>
                        <enabled>true</enabled>
                        <updatePolicy>never</updatePolicy>
                    </releases>
                    <snapshots>
                        <enabled>false</enabled>
                        <updatePolicy>never</updatePolicy>
                    </snapshots>
                </pluginRepository>
            </pluginRepositories>
    </profile>
  </profiles>

  <activeProfiles>
    <!--activeProfile>tech-preview-all</activeProfile -->
  </activeProfiles>

</settings>
